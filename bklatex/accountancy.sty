\newcommand{\journal}[3]{
	\noindent
	\centerline{\bfseries In the books of #1}
	\centerline{\itshape for the year ended 31 March, #2}
	\centerline{\bfseries Journal Account}
	\vskip3pt
	\noindent
	\begin{tabularx}{\linewidth}{|c|X|c|r|r|}
		\hline
		\textbf{Date} & \textbf{Particulars} & \textbf{LF} & \textbf{Dr Amt} & \textbf{Cr Amt} \\
		\hline
		#3
		\hline
	\end{tabularx}
}

\newcommand{\ledger}[3]{
	\begin{samepage}
	\begin{center}{Dr. \hfill {\bfseries #1} \hfill Cr.}\end{center}
	\par\vskip-.3cm\noindent
	\begin{minipage}{.5\linewidth}
		\begin{tabularx}{\linewidth}{|c|X|c|r|}
			\hline
			\textbf{Date} & \textbf{Particulars} & \textbf{JF} & \textbf{Amt} \\
			\hline
			#2
			\hline
		\end{tabularx}
	\end{minipage}
	\hspace{-.2cm}
	\begin{minipage}{.5\linewidth}
		\begin{tabularx}{\linewidth}{|c|X|c|r|}
			\hline
			\textbf{Date} & \textbf{Particulars} & \textbf{JF} & \textbf{Amt} \\
			\hline
			#3
			\hline
		\end{tabularx}
	\end{minipage}
	\end{samepage}
}		

\newcommand{\jyear}[1]{{\bfseries #1} & & & & \\}
\newcommand{\jdr}[4]{#1 & #2 a/c \hfill ...Dr \hfill & #3 & {\ttfamily #4} & \\}
\newcommand{\jcr}[3]{& \hspace{.5cm} To #1 a/c & #2 & & {\ttfamily #3} \\}
\newcommand{\jnar}[1]{& {(\itshape #1)} & & & \\ \cline{2-2}}

\newcommand{\lyear}[1]{{\bfseries #1} & & & \\}
\newcommand{\ldr}[4]{#1 & To #2 a/c & #4 & {\ttfamily #3} \\}
\newcommand{\lcr}[4]{#1 & By #2 a/c & #4 & {\ttfamily #3} \\}
\newcommand{\tobalcd}[2]{#1 & To balance c/d & & {\ttfamily #2} \\}
\newcommand{\bybalcd}[2]{#1 & By balance c/d & & {\ttfamily #2} \\}
\newcommand{\tobalbd}[2]{#1 & To balance b/d & & {\ttfamily #2} \\}
\newcommand{\bybalbd}[2]{#1 & By balance b/d & & {\ttfamily #2} \\}
\newcommand{\total}[1]{\cline{4-4} & & & {\ttfamily #1} \\}
